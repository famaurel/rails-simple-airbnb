<div class="navbar-lewagon">
  <h3>Simple AirBnb</h3>

  <div class="navbar-lewagon-actions d-none d-sm-flex">
    <a class="btn btn-outline-primary" href="/flats/new"> Add a flat</a>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(225deg, rgba(0,0,0,0.8791464401294499) 0%, rgba(199,199,199,0.4875606796116505) 100%), url('https://images.pexels.com/photos/257344/pexels-photo-257344.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500');">
  <div class="banner-content">
    <h1>Our flats</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card-image" style="background-image:url(<%= flat.image_url %>)"></div>
      <div class="card-content">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
          <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
      </div>
      <div class="card-actions">
        <span class="info"><%= link_to "More info", flat_path(flat) %></span>
        <span class="edit">Edit</span>
        <span class="remove">Remove</span>
      </div>
    </div>
    <% end %>
  </div>
</div>
