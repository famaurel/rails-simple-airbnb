
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>Add a flat to our collection</h1>
  <%= simple_form_for(@flat) do |f|%>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :image_url %>
    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type:"reset", class: "btn-danger" %>
  <% end %>
</div>
