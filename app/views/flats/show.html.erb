<div class="navbar-lewagon">
  <h3>Simple AirBnb</h3>
  <div class="navbar-lewagon-actions d-none d-sm-flex">
    <a class="btn btn-outline-primary" href="/flats/new"> Add a flat</a>
  </div>
</div>

<div class="banner" style="background-image: url(<%= @flat.image_url %>);">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="show-card">
        <h3><%= @flat.name %></h3>
        <h4><%= @flat.address %></h4>
      </div>
      <div class="show-card">
        <h3>A bit more about this flat...</h3>
        <h5><%= @flat.description %></h5>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="show-card">
        <h3>Book this place!</h3>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="show-card">
      <h3>Details</h3>
      <h4><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %>
          <i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></h4>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="show-card">
        <h3>Share</h3>
      </div>
    </div>
  </div>
</div>

